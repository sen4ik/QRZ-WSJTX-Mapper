{
    "name": "QRZ WSJT-X Mapper",
    "version": "1.0.0",
    "description": "Uses WSJT-X ADI file to see whether QSO was made with a contact",
    "manifest_version": 3,
    "author": "Artur Sentsov KN6RDD",
    "action":{
        "default_popup": "index.html",
        "default_title": "QRZ WSJT-X Mapper"
    },
    "permissions": [
        "storage",
        "declarativeContent",
        "scripting",
        "tabs",
        "activeTab",
        "webRequest"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["contentScript.js"]
        }
    ]
}